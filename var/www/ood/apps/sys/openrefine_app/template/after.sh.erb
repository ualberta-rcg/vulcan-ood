#!/bin/bash

echo "[after.sh.erb] Waiting for OpenRefine Server to start on ${host}:${port}..."

if wait_until_port_used "${host}:${port}" 600; then
  echo "Discovered OpenRefine Server listening on port ${port}!"
else
  echo "Timed out waiting for OpenRefine server to open port ${port}!"
  clean_up 1
fi
sleep 2

echo "[after.sh.erb] OpenRefine Server exited."
